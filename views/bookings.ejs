<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/f324db610c.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://kit.fontawesome.com/f324db610c.css" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/bookings.css">

</head>

<body>

    <div class="main">
        <h1 class="heading">Guest info</h1>
        <div class="search">
            <form action="/checkin-bookings/search" method="post">
                <input type="text" name="search" placeholder="Search" id="" style="text-align: center;">
                <button type="submit">Search</button>
                <!-- <a class="reset" href="/recent-bookings">Reset</a> -->
            </form>
        </div>
        <div class="bookings">
            <% for(guest of bookings) {%>
                <div class="guest">
                    <div class="guest-data">
                        <p> Guest Name : <%= guest.guestName %>
                        </p>
                        <p>CheckIn : <%= guest.checkIn %> | <%= guest.checkInTime %>
                        </p>
                        <p>Room No. : <%= guest.roomNum %>
                        </p>
                        <p>booking ID : <%= guest.bookingId %>
                        </p>
                        <p>Ststus : <%= guest.status %>
                        </p>
                    </div>
                    <div class="action all-btn">
                        <a id="edit-btn" href="/edit/<%= guest._id %> ">edit</a>
                        <a id="checkout-btn" href="/checkoutpage/<%= guest._id %>">checkout</a>

                    </div>
                </div>
                <%}%>
        </div>

        <div class="pagination">
            <ul>
                <% for (let i=1; i <=totalPages; i++) { %>
                    <%if(totalPages !==1) {%>
                        <li><a href="/checkin-bookings?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>">
                                <%= i %>
                            </a></li>
                        <%} } %>
            </ul>
        </div>

        <div class="pagination">
          <ul>
            <% if (totalPages <= 2) { %>
              <% for (let i = 1; i <= totalPages; i++) { %>
                <li>
                  <a href="/checkin-bookings?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>">
                    <%= i %>
                  </a>
                </li>
              <% } %>
            <% } else { %>
              <% if (currentPage <= 5) { %>
                <% for (let i = 1; i <= 7; i++) { %>
                  <li>
                    <a href="/checkin-bookings?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>">
                      <%= i %>
                    </a>
                  </li>
                <% } %>
                <li><span>...</span></li>
                <li>
                  <a href="/checkin-bookings?page=<%= totalPages %>" class="">
                    <%= totalPages %>
                  </a>
                </li>
              <% } else if (currentPage >= totalPages - 4) { %>
                <li>
                  <a href="/checkin-bookings?page=<%= 1 %>" class="">
                    1
                  </a>
                </li>
                <li><span>...</span></li>
                <% for (let i = totalPages - 6; i <= totalPages; i++) { %>
                  <li>
                    <a href="/checkin-bookings?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>">
                      <%= i %>
                    </a>
                  </li>
                <% } %>
              <% } else { %>
                <li>
                  <a href="/checkin-bookings?page=<%= 1 %>" class="">
                    1
                  </a>
                </li>
                <li><span>...</span></li>
                <% for (let i = currentPage - 2; i <= currentPage + 2; i++) { %>
                  <li>
                    <a href="/checkin-bookings?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>">
                      <%= i %>
                    </a>
                  </li>
                <% } %>
                <li><span>...</span></li>
                <li>
                  <a href="/checkin-bookings?page=<%= totalPages %>" class="">
                    <%= totalPages %>
                  </a>
                </li>
              <% } %>
            <% } %>
          </ul>
        </div>
        
        
        
    </div>
    </div>



</body>

</html>